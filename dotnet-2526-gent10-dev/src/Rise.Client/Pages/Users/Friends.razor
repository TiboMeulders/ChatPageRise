@page "/friends"
@using Rise.Client.Services
@using Rise.Client.Components
@inject PageTitleService PageTitleService
@inject NavigationManager Navigation

<PageTitle>Vrienden</PageTitle>

<div class="p-4 pb-24">
    <div class="mb-6">
        <p class="text-gray-500 text-sm mt-1">@_friends.Count vrienden</p>
    </div>

    @if (_friends.Any()) {
        <div class="grid grid-cols-3 gap-4">
            @foreach (var friend in _friends) {
                <div class="bg-white rounded-lg p-3 shadow-sm border text-center cursor-pointer hover:shadow-md transition-shadow relative"
                     @onclick="() => NavigateToProfile(friend.Id)">
                    <div class="absolute top-2 right-2">
                        <div class="w-3 h-3 @(friend.IsOnline ? "bg-green-500" : "bg-gray-400") rounded-full"></div>
                    </div>
                    <ProfileAvatar FirstName="@GetFirstName(friend.Name)"
                                   LastName="@GetLastName(friend.Name)"
                                   Size="lg"
                                   Class="mx-auto mb-2" />
                    <h3 class="font-semibold text-sm text-gray-800">@friend.Name</h3>
                    <p class="text-xs text-gray-500">@friend.Age</p>
                </div>
            }
        </div>
    }
    else {
        <div class="text-center py-16">
            <div class="w-24 h-24 bg-gray-200 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-800 mb-2">Nog geen vrienden</h3>
            <p class="text-gray-500">Begin met het toevoegen van vrienden!</p>
        </div>
    }
</div>
