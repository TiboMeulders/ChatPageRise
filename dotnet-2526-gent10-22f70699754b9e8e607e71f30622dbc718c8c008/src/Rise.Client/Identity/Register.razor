@page "/register"
@layout AuthLayout

<PageTitle>Register</PageTitle>

<AuthorizeView Context="authContext">
    <Authorized>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            You're already logged in as @authContext.User.Identity?.Name.
        </div>
    </Authorized>

    <NotAuthorized>
        <div class="h-screen w-full flex items-start justify-center bg-white px-4 pt-20 overflow-hidden">
            <div class="w-auto max-w-sm space-y-3">
                <!-- Logo -->
                <div class="flex items-center space-x-2 mb-6"> 
                    <img class="h-16 w-auto object-contain" src="/images/NODO_logo_transparant.png" alt="NODO Logo" />
                    <h1 class="text-2xl font-bold text-orange-500">NODO</h1>
                </div>

                <!-- Titel -->
                <h2 class="text-2xl font-bold text-black mt-6">Registreer</h2>

                <!-- Succesboodschap -->
                @if (_result is not null && _result.IsSuccess)
                {
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                        Je bent succesvol geregistreerd! Je kan nu <a href="/" class="font-bold underline">inloggen</a>.
                    </div>
                }
                else
                {
                    <!-- Formulier -->
                    <EditForm Model="Model" OnValidSubmit="RegisterUserAsync" Context="formContext" class="space-y-3">
                        <FluentValidationValidator/>

                        <div class="space-y-3 mt-4">

                            <!-- Voornaam -->
                            <InputText @bind-Value="Model.FirstName"
                                       placeholder="Voornaam"
                                       class="w-full px-6 py-3 bg-orange-100 border-none rounded-full text-orange-500 placeholder-orange-500 
                                              focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent" />
                            <ValidationMessage For="() => Model.FirstName" class="text-red-600 text-sm ml-6" />

                            <!-- Naam -->
                            <InputText @bind-Value="Model.LastName"
                                       placeholder="Naam"
                                       class="w-full px-6 py-3 bg-orange-100 border-none rounded-full text-orange-500 placeholder-orange-500 
                                              focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent" />
                            <ValidationMessage For="() => Model.LastName" class="text-red-600 text-sm ml-6" />

                            <!-- Email -->
                            <InputText @bind-Value="Model.Email"
                                       type="email"
                                       placeholder="Email"
                                       autocomplete="username"
                                       class="w-full px-6 py-3 bg-orange-100 border-none rounded-full text-orange-500 placeholder-orange-500 
                                              focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent" />
                            <ValidationMessage For="() => Model.Email" class="text-red-600 text-sm ml-6" />

                            <!-- Password Input --> <div> <div class="relative"> <InputText @bind-Value="Model.Password" type="@(ShowPassword ? "text" : "password")" autocomplete="new-password" id="password" class="w-full px-6 py-3 bg-orange-100 border-none rounded-full text-black placeholder-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-400 pr-12" placeholder="Wachtwoord"/> <button type="button" @onclick="TogglePasswordVisibility" class="absolute inset-y-0 right-0 pr-6 flex items-center text-orange-400 hover:text-orange-600"> <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"> @if (ShowPassword) { <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path> } else { <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path> } </svg> </button> </div> <ValidationMessage For="() => Model.Password" class="text-red-600 text-sm mt-1 ml-6"/> </div> <!-- Confirm Password Input --> <div> <div class="relative"> <InputText @bind-Value="Model.ConfirmPassword" type="@(ShowConfirmPassword ? "text" : "password")" autocomplete="new-password" id="confirmpassword" class="w-full px-6 py-3 bg-orange-100 border-none rounded-full text-black placeholder-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-400 pr-12" placeholder="Herhaal wachtwoord"/> <button type="button" @onclick="ToggleConfirmPasswordVisibility" class="absolute inset-y-0 right-0 pr-6 flex items-center text-orange-400 hover:text-orange-600"> <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"> @if (ShowConfirmPassword) { <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path> } else { <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path> } </svg> </button> </div> <ValidationMessage For="() => Model.ConfirmPassword" class="text-red-600 text-sm mt-1 ml-6"/> </div>

                            <!-- Geboortedatum -->
                            <InputDate @bind-Value="Model.BirthDate"
                                       id="birthdate"
                                       class="w-full px-6 py-3 bg-orange-100 border-none rounded-full text-orange-500 placeholder-orange-500 
                                              focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent cursor-pointer" />
                            <ValidationMessage For="() => Model.BirthDate" class="text-red-600 text-sm ml-6" />

                            <!-- Faciliteiten -->
                            <InputSelect id="facility" @bind-Value="Model.FacilityId"
                                         class="w-full px-6 py-3 bg-orange-100 border-none rounded-full text-orange-500 placeholder-orange-500 
                    focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent cursor-pointer pr-10">
                                <option disabled selected value="0">Kies een faciliteit</option>
                                @foreach (var facility in FacilitiesDto)
                                {
                                    <option value="@facility.Id">@facility.Name</option>
                                }
                            </InputSelect>

                            <ValidationMessage For="() => Model.FacilityId" class="text-red-600 text-sm ml-6" />
                        </div>

                        <!-- Knop -->
                        <div class="pt-2">
                            <button type="submit"
                                    class="w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-6 rounded-full 
                                           transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-orange-400">
                                Registreer
                            </button>
                        </div>

                        <!-- Link -->
                        <div class="text-center pt-2">
                            <span class="text-black text-sm">Al een account? </span>
                            <a href="/" class="font-bold text-orange-500 hover:text-orange-600 text-sm">
                                Log hier in!
                            </a>
                        </div>
                    </EditForm>
                }

                <!-- Errors -->
                @if (_result is not null && !_result.IsSuccess)
                {
                    <div class="mt-3 space-y-2">
                        @foreach (var error in _result.Errors)
                        {
                            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">@error</div>
                        }
                    </div>
                }
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>
